{
  "name": "pawtropolis-tech",
  "version": "0.1.0",
  "description": "Server-owned Discord gatekeeping bot. Transparent, auditable, and minimal. Built by watchthelight (Bash).",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "author": {
    "name": "watchthelight (Bash)",
    "email": "admin@watchthelight.org",
    "url": "https://watchthelight.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/watchthelight/pawtropolis-tech.git"
  },
  "bugs": {
    "url": "https://github.com/watchthelight/pawtropolis-tech/issues",
    "email": "admin@watchthelight.org"
  },
  "homepage": "https://github.com/watchthelight/pawtropolis-tech#readme",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "deploy:cmds": "tsx scripts/deploy-commands.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "discord.js": "^14.16.3",
    "dotenv": "^17.2.3",
    "pino": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "tsup": "^8.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
